    <script>
      // Simple Slider Implementation
      document.addEventListener('DOMContentLoaded', function () {
        const slider = document.getElementById('slider');
        const slides = document.querySelectorAll('.slide');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const sliderDots = document.getElementById('sliderDots');
        const currentSlideEl = document.getElementById('currentSlide');
        const totalSlidesEl = document.getElementById('totalSlides');
        const galleryThumbnails =
          document.querySelectorAll('.gallery-thumbnail');
        const fullscreenBtn = document.getElementById('fullscreenBtn');

        if (!slider || slides.length <= 1) return;

        let currentIndex = 0;
        const totalSlides = slides.length;

        // Initialize counter
        if (currentSlideEl) currentSlideEl.textContent = currentIndex + 1;
        if (totalSlidesEl) totalSlidesEl.textContent = totalSlides;

        // Create dots
        if (sliderDots) {
          for (let i = 0; i < totalSlides; i++) {
            const dot = document.createElement('div');
            dot.className = 'dot' + (i === 0 ? ' active' : '');
            dot.dataset.index = i;
            dot.addEventListener('click', () => goToSlide(i));
            sliderDots.appendChild(dot);
          }
        }

        // Update slider position
        function updateSlider() {
          slider.style.transform = `translateX(-${currentIndex * 100}%)`;

          // Update counter
          if (currentSlideEl) {
            currentSlideEl.textContent = currentIndex + 1;
          }

          // Update dots
          const dots = document.querySelectorAll('.dot');
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentIndex);
          });

          // Update thumbnails
          galleryThumbnails.forEach((thumb, index) => {
            thumb.classList.toggle('active', index === currentIndex);
          });
        }

        function goToSlide(index) {
          if (index < 0 || index >= totalSlides) return;
          currentIndex = index;
          updateSlider();
        }

        function nextSlide() {
          currentIndex = (currentIndex + 1) % totalSlides;
          updateSlider();
        }

        function prevSlide() {
          currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
          updateSlider();
        }

        // Event listeners for navigation buttons
        if (prevBtn) {
          prevBtn.addEventListener('click', prevSlide);
        }

        if (nextBtn) {
          nextBtn.addEventListener('click', nextSlide);
        }

        // Event listeners for thumbnails
        galleryThumbnails.forEach((thumb) => {
          thumb.addEventListener('click', function () {
            const index = parseInt(this.dataset.index);
            goToSlide(index);
          });
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') {
            prevSlide();
          } else if (e.key === 'ArrowRight') {
            nextSlide();
          }
        });

        // Touch/swipe support
        let touchStartX = 0;
        let touchEndX = 0;

        slider.parentElement.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        });

        slider.parentElement.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          handleSwipe();
        });

        function handleSwipe() {
          const swipeThreshold = 50;
          const swipeDistance = touchEndX - touchStartX;

          if (Math.abs(swipeDistance) > swipeThreshold) {
            if (swipeDistance > 0) {
              prevSlide();
            } else {
              nextSlide();
            }
          }
        }

        // Auto-play (optional)
        let autoPlayInterval = null;

        function startAutoPlay() {
          stopAutoPlay();
          autoPlayInterval = setInterval(nextSlide, 5000);
        }

        function stopAutoPlay() {
          if (autoPlayInterval) {
            clearInterval(autoPlayInterval);
            autoPlayInterval = null;
          }
        }

        // Start auto-play
        startAutoPlay();

        // Pause on hover
        slider.parentElement.addEventListener('mouseenter', stopAutoPlay);
        slider.parentElement.addEventListener('mouseleave', startAutoPlay);

        // Fullscreen functionality
        if (fullscreenBtn) {
          fullscreenBtn.addEventListener('click', openFullscreen);
        }

        function openFullscreen() {
          const modal = document.getElementById('imageModal');
          const modalSlider = document.getElementById('modalSlider');

          if (!modal || !modalSlider) return;

          // Clear existing slides
          modalSlider.innerHTML = '';

          // Add current slide to modal
          slides.forEach((slide, index) => {
            const img = slide.querySelector('img');
            if (img) {
              const modalSlide = document.createElement('div');
              modalSlide.className = 'modal-slide';
              modalSlide.style.flex = '0 0 100%';
              modalSlide.style.height = '100%';
              modalSlide.style.display = 'flex';
              modalSlide.style.alignItems = 'center';
              modalSlide.style.justifyContent = 'center';

              const modalImg = document.createElement('img');
              modalImg.src = img.src;
              modalImg.alt = img.alt;
              modalImg.className = 'modal-image';

              modalSlide.appendChild(modalImg);
              modalSlider.appendChild(modalSlide);
            }
          });

          // Set initial position
          modalSlider.style.transform = `translateX(-${currentIndex * 100}%)`;
          modalSlider.style.display = 'flex';
          modalSlider.style.transition = 'transform 0.5s ease';
          modalSlider.style.width = `${totalSlides * 100}%`;
          modalSlider.style.height = '100%';

          // Show modal
          modal.classList.add('active');
          document.body.style.overflow = 'hidden';

          // Modal navigation
          const modalPrevBtn = document.getElementById('modalPrevBtn');
          const modalNextBtn = document.getElementById('modalNextBtn');
          const modalClose = document.getElementById('modalClose');
          let modalCurrentIndex = currentIndex;

          function updateModalSlider() {
            modalSlider.style.transform = `translateX(-${
              modalCurrentIndex * 100
            }%)`;
          }

          function modalNextSlide() {
            modalCurrentIndex = (modalCurrentIndex + 1) % totalSlides;
            updateModalSlider();
          }

          function modalPrevSlide() {
            modalCurrentIndex =
              (modalCurrentIndex - 1 + totalSlides) % totalSlides;
            updateModalSlider();
          }

          // Remove existing event listeners and add new ones
          if (modalPrevBtn) {
            modalPrevBtn.onclick = modalPrevSlide;
          }

          if (modalNextBtn) {
            modalNextBtn.onclick = modalNextSlide;
          }

          // Keyboard navigation in modal
          function handleModalKeydown(e) {
            if (e.key === 'Escape') {
              closeModal();
            } else if (e.key === 'ArrowLeft') {
              modalPrevSlide();
            } else if (e.key === 'ArrowRight') {
              modalNextSlide();
            }
          }

          function closeModal() {
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
            document.removeEventListener('keydown', handleModalKeydown);
          }

          if (modalClose) {
            modalClose.onclick = closeModal;
          }

          // Close modal on outside click
          modal.onclick = function (e) {
            if (e.target === modal) {
              closeModal();
            }
          };

          // Add keyboard listener
          document.addEventListener('keydown', handleModalKeydown);
        }
      });

      // Toast Notification
      function showToast(message) {
        const toast = document.getElementById('toast');
        toast.textContent = message;
        toast.classList.add('show');

        setTimeout(() => {
          toast.classList.remove('show');
        }, 3000);
      }

      // Comment Form Toggle
      const showCommentFormBtn = document.getElementById('showCommentForm');
      const commentForm = document.getElementById('commentForm');
      const cancelCommentBtn = document.getElementById('cancelComment');
      const commentContent = document.getElementById('commentContent');
      const charCount = document.getElementById('charCount');

      if (showCommentFormBtn && commentForm) {
        showCommentFormBtn.addEventListener('click', () => {
          commentForm.style.display = 'block';
          showCommentFormBtn.style.display = 'none';
          if (commentContent) {
            commentContent.focus();
          }
        });
      }

      if (cancelCommentBtn && commentForm) {
        cancelCommentBtn.addEventListener('click', () => {
          commentForm.style.display = 'none';
          if (showCommentFormBtn) {
            showCommentFormBtn.style.display = 'inline-flex';
          }
          if (commentContent) {
            commentContent.value = '';
            if (charCount) {
              charCount.textContent = '0';
            }
          }
        });
      }

      // Character count for comment textarea
      if (commentContent && charCount) {
        commentContent.addEventListener('input', () => {
          charCount.textContent = commentContent.value.length;
        });

        // Initialize character count
        charCount.textContent = commentContent.value.length;
      }

      // Form submission handling
      const commentFormElement = document.getElementById('commentFormElement');
      if (commentFormElement) {
        commentFormElement.addEventListener('submit', function (e) {
          const content = commentContent.value.trim();
          if (!content) {
            e.preventDefault();
            showToast('Please enter a comment');
            commentContent.focus();
            return false;
          }

          if (content.length > 1000) {
            e.preventDefault();
            showToast('Comment must be less than 1000 characters');
            return false;
          }

          // Show loading state
          const submitBtn = document.getElementById('submitComment');
          const originalText = submitBtn.innerHTML;
          submitBtn.innerHTML =
            '<i class="fas fa-spinner fa-spin"></i> Posting...';
          submitBtn.disabled = true;

          // Allow form to submit normally
          return true;
        });
      }

      // Like button animation - SIMPLIFIED VERSION
      document.addEventListener('DOMContentLoaded', function () {
        // Check if there's a success message in URL
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('comment') === 'success') {
          showToast('Comment posted successfully!');
        }

        // Check for error messages
        if (urlParams.get('error')) {
          showToast('Error: ' + urlParams.get('error'));
        }

        // Handle like button click
        const likeButton = document.getElementById('likeButton');
        const loginLikeButton = document.getElementById('loginLikeButton');

        // For logged-in users
        if (likeButton) {
          likeButton.addEventListener('click', function (e) {
            e.preventDefault(); // Always prevent default for logged-in users

            const isLiked = this.classList.contains('liked');
            const likeText = document.getElementById('likeText');
            const likeCount = document.getElementById('likeCount');
            const heartIcon = this.querySelector('i');

            // Update UI immediately (optimistic update)
            if (isLiked) {
              this.classList.remove('liked');
              likeText.textContent = 'Like';
              heartIcon.classList.remove('fas');
              heartIcon.classList.add('far');

              // Update count
              const currentCount = parseInt(
                likeCount.textContent.match(/\d+/)[0]
              );
              likeCount.textContent = `(${currentCount - 1})`;
            } else {
              this.classList.add('liked');
              likeText.textContent = 'Liked';
              heartIcon.classList.remove('far');
              heartIcon.classList.add('fas');

              // Update count
              const currentCount = parseInt(
                likeCount.textContent.match(/\d+/)[0]
              );
              likeCount.textContent = `(${currentCount + 1})`;
            }

            // Send request to server
            fetch(this.href, {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
              },
            })
              .then((response) => {
                if (!response.ok) {
                  throw new Error('Network response was not ok');
                }
                return response.json();
              })
              .then((data) => {
                // Update with server response
                if (data.liked) {
                  this.classList.add('liked');
                  likeText.textContent = 'Liked';
                  heartIcon.classList.remove('far');
                  heartIcon.classList.add('fas');
                } else {
                  this.classList.remove('liked');
                  likeText.textContent = 'Like';
                  heartIcon.classList.remove('fas');
                  heartIcon.classList.add('far');
                }

                // Update count from server
                if (data.likeCount !== undefined) {
                  likeCount.textContent = `(${data.likeCount})`;
                }

                showToast(data.message || 'Like updated!');
              })
              .catch((error) => {
                console.error('Error:', error);
                // Revert changes on error
                if (isLiked) {
                  this.classList.add('liked');
                  likeText.textContent = 'Liked';
                  heartIcon.classList.remove('far');
                  heartIcon.classList.add('fas');
                  const currentCount = parseInt(
                    likeCount.textContent.match(/\d+/)[0]
                  );
                  likeCount.textContent = `(${currentCount + 1})`;
                } else {
                  this.classList.remove('liked');
                  likeText.textContent = 'Like';
                  heartIcon.classList.remove('fas');
                  heartIcon.classList.add('far');
                  const currentCount = parseInt(
                    likeCount.textContent.match(/\d+/)[0]
                  );
                  likeCount.textContent = `(${currentCount - 1})`;
                }
                showToast('Failed to update like. Please try again.');
              });
          });
        }

        // For logged-out users - let it redirect normally
        if (loginLikeButton) {
          loginLikeButton.addEventListener('click', function (e) {
            // Let it redirect to login page - no prevention
            return true;
          });
        }
      });
    </script>
